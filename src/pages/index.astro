---
import Layout from "../layouts/Default.astro";
import Navbar from "../components/Navbar.astro";
import NavbarClone from "../components/NavbarClone.astro";
import HomeDiplomados from "../components/HomeDiplomados.astro";
import HomeEspecializaciones from "../components/HomeEspecializaciones.astro";
import HomeCursos from "../components/HomeCursos.astro";
import HomeTutoriales from "../components/HomeTutoriales.astro";
const title = "Cursos online y presencial :: Diplomados y Maestrías";
import "flickity/dist/flickity.min.css";
---

<Layout title={title}>

	<!-- Banner Home -->
	<section class="hero is-medium has-background-image" 
		data-background="/img/banners/bg-hero-home.webp"
		data-position="center 30%">

		<Navbar />

		<NavbarClone />

		<div class="hero-body">
			<div class="container">
				<div class="columns is-vcentered">
					<div class="column is-6 landing-caption">
						<h1 class="title is-1 is-bold is-spaced light-text">
							Programación FullStack
						</h1>
						<h2 class="title is-2 is-bold is-spaced light-text">
							Aprende a programar desde 0
						</h2>
						<h2 class="subtitle is-5 light-text">
							Cursos y Diplomados Certificados por el Ministerio de
							Educación. Consigue empleo después de especializarte
						</h2>
						<div>
							<a class="button is-light is-outlined is-large">
								Solicita Asesoría
							</a>
						</div>
					</div>
					<!-- <div class="column is-6">
						<img
							src="/img/illustrations/worker.svg"
							class="hero-image"
							alt="Description"
						/>
					</div> -->
				</div>
			</div>
		</div>
	</section>



	<!-- Bloque Diplomados -->
	<HomeDiplomados />



	<!-- Bloque Especializaciones -->
	<HomeEspecializaciones />



	<!-- Bloque Cursos -->
	<HomeCursos/>



	<section class="section has-background-grey-lighter">
		<div class="container mt-20 mb-20">	
			<div class="columns is-vcentered is-centered side-feature">
				<div class="column is-5">
					<h3 class="title is-3 mb-10 is-title-reveal">
						Sigue los pasos del éxito de tu carrera ahora
					</h3>
					<div class="buttons">
						<a href="/como-inscribirse" class="button primary-btn raised is-large">Inscríbete Ya</a>
						<a href="/formas-de-pago" class="button accent-btn raised is-large">Formas de Pago</a>
					</div>
				</div>
				<div class="column is-4">
					<figure class="image is-4by3">
						<img src="/img/pics/cta-home.png" alt="" />
					</figure>
				</div>
			</div>

			
		</div>
	</section>



	<!-- Bloque Tutoriales -->
	<HomeTutoriales/>



	<section class="section huge-pb">
		<div class="container">	
			<div class="columns is-centered side-feature">
				<div class="column is-5">
					<h3 class="title is-3 mb-10 is-title-reveal">
						Nuestros Diplomados online o presenciales certificados por el Ministerio de Educación, encuentra empleo o trabaja freelance después de especializarte.
					</h3>

					<h4 class="title is-4 mb-10 is-title-reveal">
						Forma parte de nuestra Comunidad, <br>obtén descuentos y talleres gratis
					</h4>

					<div class="buttons">
						<a href="/como-inscribirse" class="button accent-btn raised is-large">Únete desde ya</a>
					</div>
				</div>
				<div class="column is-5 has-text-centered">
					<h2 class="title">¿Qué quieres aprender hoy?</h2>
					<iframe loading="lazy" width="540" height="480" src="https://my.sendinblue.com/users/subscribe/js_id/2uqa0/id/1"  allowfullscreen="" style="display: block;margin-left: auto;margin-right: auto;max-width: 100%;"></iframe>
				</div>
			</div>

			
		</div>
	</section>


</Layout>
