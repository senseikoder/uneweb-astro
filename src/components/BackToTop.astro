<!-- Back To Top Button -->
<div
  x-data="initBackToTop()"
  x-on:scroll.window="scroll($event)"
  @click="goTop($event)"
  id="backtotop"
>
  <a href="javascript:" :class="{
    'visible': scrolled,
    '': !scrolled
}" class="icon">
      <i class="iconify" data-icon="fa6-solid:arrow-up"></i>
  </a>
</div>
