---
import Layout from "../layouts/Internas.astro";
import CursosRelated from "../components/CursosRelated.astro";
import AsideInterno from "../components/AsideInterno.astro";
const title = "Diplomado de Mercadeo Digital :: Uneweb";
import ModalVideo from "../components/ModalVideo.astro";
const contenido = [
   {
      curso: "Community Manager Nivel I",
      link: "/community-manager",
   },
   {
      curso: "Community Manager Nivel II",
      link: "/community-manager",
   },
   {
      curso: "Marketing Digital",
      link: "/marketing-digital",
   },
   {
      curso: "HTML5 nivel 1",
      link: "/html",
   },
   {
      curso: "Comunicación masiva, e-mail y SMS",
      link: "comunicacion-masiva-email-y-sms",
   },
   {
      curso: "SEO",
      link: "/seo",
   },
   {
      curso: "WordPress Nivel I",
      link: "/curso-de-wordpress",
   },
   {
      curso: "WordPress Nivel II",
      link: "/curso-de-wordpress",
   },
   {
      curso: "Illustrator Nivel I",
      link: "/illustrator",
   },
   {
      curso: "Photoshop Nivel I",
      link: "/photoshop",
   },
   {
      curso: "Animate",
      link: "/curso-de-animate-cc",
   },
   {
      curso: "Proyecto Especializado en Marketing Digital",
      link: "#",
   },
];

const urlDoc = "/docs/Contenido-del-Diplomado-de-Mercadeo.pdf";
const urlPic = "/img/pics/diplomado-mercadeo.webp";
---

<Layout title={title}>
   <!-- Banner Home -->
   <section
      class="section is-medium has-background-image banner"
      data-background="/img/banners/bg-diplomados.webp"
      data-position="center 30%"
   >
      <div class="container">
         <div class="columns is-vcentered">
            <div class="column is-7 landing-caption">
               <h1 class="title is-1 is-bold is-spaced light-text">
                  Diplomado de Mercadeo Digital
               </h1>
               <h2 class="subtitle is-5 light-text">
                  Especialízate en Community manager y Marketing digital
                  aprendiendo aplicaciones social media, diseño digital y
                  programación SEO para posicionar en la red de búsqueda.
               </h2>
            </div>
         </div>
      </div>
   </section>

   <section class="section main">
      <div class="container">
         <div class="columns">
            <div class="column is-8">
               <div class="card">
                  <div class="card-content">
                     <div class="content">
                        <h3 class="title is-4 mb-10 is-title-reveal">
                           Clases online clases por zoom, videos tutoriales y
                           prácticas Clases presenciales de lunes a viernes y
                           Sabatino
                        </h3>

                        <p>
                           Especialízate en Marketing digital y Community
                           manager para desarrollar estrategias de venta por
                           internet, desarrolla un plan de marketing digital. En
                           este Diplomado obtienes todas las herramientas para
                           ser experto en Social Media.
                        </p>

                        <h4 class="title is-5">
                           El Diplomado de Mercadeo: Contiene 12 Cursos más el
                           proyecto para aplicar el Mercadeo en las Redes
                           sociales, blog, Páginas web y todos los medios
                           online, el estudiante puede desarrollar:
                        </h4>
                     </div>

                     <ul class="item-list mb-5">
                        <li>Técnicas y herramientas de Community manager</li>
                        <li>Herramientas para publicidad masiva, redes sociales, correos, SMS</li>
                        <li>Diseñe en sus redes sociales, blogs, páginas web</li>
                        <li>Videos, animaciones para la promoción de productosy/o servicios</li>
                     </ul>

                     <div class="content is-size-5">
                        <p>
                           Al entregar el Proyecto se evalúa y emite un Diploma
                           Registrado en el Ministerio de Educación.
                        </p>
                        <p>
                           Encuentra empleo o trabajo freelance por las
                           siguientes páginas web <i
                              >empleate.com, computrabajo.com, freelancer.es</i
                           >
                        </p>
                        <p class="has-text-weight-semibold">
                           Certificado por el Ministerio de Educación. Código Nº
                           PR -07-017-11AC. Legaliza y apostilla tu certificado.
                        </p>
                     </div>

                     <div class="columns">
                        <div class="column">
                           <h4 class="subtitle">Duración:</h4>

                           <ul class="item-list">
                              <li>3 meses presencial lunes a viernes.</li>
                              <li>9 meses presencial sabatino.</li>
                              <li>6 meses online.</li>
                           </ul>
                        </div>
                        <div class="column">
                           <h4 class="subtitle">Laboratorios</h4>

                           <ul class="item-list">
                              <li>Incluye 1 computador por persona.</li>
                              <li>De 4 a 8 alumnos por salón.</li>
                           </ul>
                        </div>
                     </div>

                     <hr />

                     <div class="columns">
                        <div class="column">
                           <h4 class="subtitle">Certificación:</h4>

                           <p>Registrado en el Ministerio de Educación</p>
                        </div>
                        <div class="column">
                           <h4 class="subtitle">Requisitos:</h4>

                           <p>Manejo básico de office e internet.</p>
                        </div>
                     </div>

                     <h3 class="title is-4">Contenido del Diplomado</h3>

                     <ul class="link-list">
                        {
                           contenido.map((item) => (
                              <li>
                                 <a href={item.link} class="icon-text">
                                    <div class="icon">
                                       <i
                                          class="iconify"
                                          data-icon="fa6-solid:circle-check"
                                       />
                                    </div>
                                    <span class="has-text-weight-medium is-size-5">
                                       {item.curso}
                                    </span>
                                 </a>
                              </li>
                           ))
                        }
                     </ul>
                  </div>
               </div>
            </div>

            <AsideInterno urlDoc={urlDoc} urlPic={urlPic} btnDoc="Diplomado" />
         </div>
      </div>
   </section>

   <CursosRelated tag="mercadeo"></CursosRelated>

   <ModalVideo videoID="WpE-27Jg8ic" />
</Layout>

<style>
   .main {
      overflow: visible !important;
   }
</style>
