      link: "/curso-de-php",
   },
   {
      curso: "MySQL",
      link: "/mysql",
   },
   {
      curso: "PostgreSQL",
      link: "/curso-de-postgre-sql",
   },
   {
      curso: "JavaScript",
      link: "/curso-de-javascript",
   },
   {
      curso: "JQuery",
      link: "/curso-de-jquery",
   },
   {
      curso: "Python Nivel I - II",
      link: "/curso-de-python",
   },
   {
      curso: "Linux Administrator",
      link: "#",
   },
   {
      curso: "WordPress Nivel I - II",
      link: "/curso-de-wordpress",
   },
   {
      curso: "Illustrator Nivel I",
      link: "/illustrator",
   },
   {
      curso: "Photoshop Nivel I - II",
      link: "/photoshop",
   },
  {
      curso: "Diagramación Digital",
      link: "#",
   },
   {
      curso: "InDesign Nivel I",
      link: "/curso-de-indesign",
   },
   {
      curso: "Blender 3D  Niveles I - II - III",
      link: "/curso-de-3d-en-caracas/",
   },
   {
      curso: "After Effects CC Niveles I - II",
      link: "/after-effects-nivel-1/",
   },
   {
      curso: "Premiere Pro",
      link: "/premiere/",
   },
   {
      curso: "Animate",
      link: "/curso-de-animate-cc/",
   },

   {
      curso: "Community Manager Nivel I - II",
      link: "/community-manager",
   },
   {
      curso: "Marketing Digital",
      link: "/marketing-digital",
   },
   {
      curso: "Comunicación masiva",
      link: "comunicacion-masiva-email-y-sms",
   },
   {
