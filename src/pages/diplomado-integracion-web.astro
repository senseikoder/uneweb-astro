---
import Layout from "../layouts/Diplomados.astro";
import CursosRelated from "../components/CursosRelated.astro";
import AsideInterno from "../components/AsideInterno.astro";
const title = "Diplomado Webmaster :: Uneweb";
import ModalVideo from "../components/ModalVideo.astro";
const contenido = [
   {
      curso: "Photoshop Nivel I",
      link: "/photoshop",
   },
   {
      curso: "Diagramación Digital",
      link: "#",
   },
   {
      curso: "HTML5 Nivel I",
      link: "/html",
   },
   {
      curso: "HTML5 Nivel II",
      link: "/html-5",
   },
   {
      curso: "WordPress Niveles I y II",
      link: "/curso-de-wordpress",
   },
   {
      curso: "Bootstrap",
      link: "/curso-de-bootstrap",
   },
   {
      curso: "Lógica de Programación",
      link: "/curso-logica-de-programacion/",
   },
   {
      curso: "PHP Niveles I - II",
      link: "/curso-de-php",
   },
   {
      curso: "Javascript",
      link: "/curso-de-javascript",
   },
   {
      curso: "MySQL",
      link: "/mysql",
   },
   {
      curso: "Proyecto Página Web",
      link: "#",
   },
];

const urlDoc = "/docs/Contenido-del-Diplomado-de-Web-Master.pdf";
const urlPic = "/img/pics/diplomado-webmaster.webp";
---

<Layout title={title}>
   <!-- Banner Home -->
   <section
      class="section is-medium has-background-image banner"
      data-background="/img/banners/bg-diplomados.webp"
      data-position="center 30%"
   >
      <div class="container">
         <div class="columns is-vcentered">
            <div class="column is-6 landing-caption">
               <h1 class="title is-1 is-bold is-spaced light-text">
                  Diplomado Webmaster 
               </h1>
               <h2 class="subtitle is-5 light-text">
                  Desarrolla Páginas web inteligentes en Wordpress o en Bootstrap, consigue empleo fácilmente o trabaja freelance.
               </h2>
            </div>
         </div>
      </div>
   </section>

   <section class="section main">
      <div class="container">
         <div class="columns">
            <div class="column is-8">
               <div class="card">
                  <div class="card-content">

                     <div class="content">

                        <h3 class="title is-4 mb-10 is-title-reveal">
                           Clases online clases por zoom, videos tutoriales y
                           prácticas Clases presenciales de lunes a viernes y
                           Sabatino
                        </h3>

                        <p>Diseña y crea páginas web inteligentes, con aplicaciones y administrador de contenidos para ser editables en línea.</p>
   
                        <h4 class="title is-5">
                           El Diplomado contiene 12 cursos más el proyecto, es 100%
                           práctico, el estudiante desarrollará:
                        </h4>
                     </div>

                     <ul class="item-list mb-5">
                        <li>
                           Páginas Web con administrador de contenidos
                        </li>
                        <li>Animaciones de Páginas web</li>
                        <li>Aplicaciones para páginas Web</li>
                        <li>Páginas Web editables por el Cliente</li>
                     </ul>

                     <div class="content is-size-5">
                        <p>
                           Al entregar el Proyecto se evalúa y emite un Diploma
                           Registrado en el Ministerio de Educación.
                        </p>
                        <p>
                           Encuentra empleo o trabajo freelance por las
                           siguientes páginas web <i
                              >empleate.com, computrabajo.com, freelancer.es</i
                           >
                        </p>
                        <p class="has-text-weight-semibold">
                           Certificado por el Ministerio de Educación. Código Nº
                           PR -07-017-11AC. Legaliza y apostilla tu certificado.
                        </p>
                     </div>

                     <div class="columns">
                        <div class="column">
                           <h4 class="subtitle">Duración:</h4>

                           <ul class="item-list">
                              <li>3 meses presencial lunes a viernes.</li>
                              <li>9 meses presencial sabatino.</li>
                              <li>6 meses online.</li>
                           </ul>
                        </div>
                        <div class="column">
                           <h4 class="subtitle">Laboratorios</h4>

                           <ul class="item-list">
                              <li>Incluye 1 computador por persona.</li>
                              <li>De 4 a 8 alumnos por salón.</li>
                           </ul>
                        </div>
                     </div>

                     <hr />

                     <div class="columns">
                        <div class="column">
                           <h4 class="subtitle">Certificación:</h4>

                           <p>Registrado en el Ministerio de Educación</p>
                        </div>
                        <div class="column">
                           <h4 class="subtitle">Requisitos:</h4>

                           <p>Manejo básico de office e internet.</p>
                        </div>
                     </div>

                     <h3 class="title is-4">Contenido del Diplomado</h3>

                     <ul class="link-list">
                        {
                           contenido.map((item) => (
                              <li>
                                 <a href={item.link} class="icon-text">
                                    <div class="icon">
                                       <i
                                          class="iconify"
                                          data-icon="fa6-solid:circle-check"
                                       />
                                    </div>
                                    <span class="has-text-weight-medium is-size-5">
                                       {item.curso}
                                    </span>
                                 </a>
                              </li>
                           ))
                        }
                     </ul>
                  </div>
               </div>
            </div>

            <AsideInterno urlDoc={urlDoc} urlPic={urlPic} />
         </div>
      </div>
   </section>

   <CursosRelated tag="webmaster"></CursosRelated>

   <ModalVideo videoID="lvoZB1IfgmU" />
</Layout>

<style>
   .main {
      overflow: visible !important;
   }
</style>
