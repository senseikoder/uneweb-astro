---
import Navbar from "../components/Navbar.astro";
import NavbarClone from "../components/NavbarClone.astro";
import "/node_modules/reveal.js/dist/reveal.css";
// import "/node_modules/reveal.js/dist/theme/white.css";
---

<section class="hero" 
   data-background="/img/banners/bg-home.png" 
   data-position="top center">
   <Navbar />

   <NavbarClone />

   <div class="hero-body p-2">
      <div class="container">
         <div class="columns is-vcentered">
            <div class="column is-7">
               <div class="reveal">
                  <div class="slides">
                     <section>
                        <h1 class="title is-2 is-bold is-spaced">
                           Programación FullStack
                        </h1>
                        <h2 class="title is-3 is-bold is-spaced">
                           Aprende a programar desde 0
                        </h2>
                        <h2 class="subtitle is-5">
                           Cursos y Diplomados Certificados por el Ministerio de
                           Educación. Consigue empleo después de especializarte
                        </h2>
                        <div>
                           <a class="button primary-btn btn-outlined is-large">
                              Solicita Asesoría
                           </a>
                        </div>
                     </section>

                     <section>
                        <h1 class="title is-2 is-bold is-spaced">
                           Diseño Gráfico Digital
                        </h1>
                        <h2 class="title is-3 is-bold is-spaced">
                           Amplía tu curriculo
                        </h2>
                        <h2 class="subtitle is-5">
                           Cursos y Diplomados Certificados por el Ministerio de
                           Educación. Consigue empleo después de especializarte
                        </h2>
                        <div>
                           <a class="button primary-btn btn-outlined is-large">
                              Solicita Asesoría
                           </a>
                        </div>
                     </section>

                     <section>
                        <h1 class="title is-2 is-bold is-spaced">
                           Marketing Digital y Social Media,<br>SEO + Ads
                        </h1>
                        <h2 class="subtitle is-5">
                           Cursos y Diplomados Certificados por el Ministerio de
                           Educación. Consigue empleo después de especializarte
                        </h2>
                        <div>
                           <a class="button primary-btn btn-outlined is-large">
                              Solicita Asesoría
                           </a>
                        </div>
                     </section>
                  </div>
               </div>
            </div>
            <div class="column is-5">
               <iframe
                  loading="lazy"
                  width="400"
                  height="400"
                  src="https://my.sendinblue.com/users/subscribe/js_id/2uqa0/id/1"
                  allowfullscreen=""
                  style="display: block;margin-left: auto;margin-right: auto;max-width: 100%;"
               ></iframe>
            </div>
         </div>
      </div>
   </div>
</section>

<script>
   import Reveal from "reveal.js";

   document.addEventListener("astro:page-load", () => {
      let deck = new Reveal({
         height: 400,
         controls: false,
         progress: false,
         autoSlide: 5000,
         loop: true,
         disableLayout: true,
         transition: "fade",
         embedded: true,
         autoSlideStoppable: false
      });
      deck.initialize();
   })

</script>

<style is:global>

   .reveal-viewport {
      background-color: transparent;
   }
   .reveal.center {
      min-height: 250px !important;
   }

   .reveal .slides {
      text-align: left;
   }

   .reveal h1,
   .reveal h2,
   .reveal h3,
   .reveal h4,
   .reveal h5,
   .reveal h6 {
      text-transform: none;
      line-height: unset;
   }
</style>
