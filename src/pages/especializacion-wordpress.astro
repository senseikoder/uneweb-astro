---
import Layout from "../layouts/Internas.astro";
import CursosRelated from "../components/CursosRelated.astro";
import AsideInterno from "../components/AsideInterno.astro";
import ModalVideo from "../components/ModalVideo.astro";
const title = "Especialización de Wordpress :: Uneweb";
---

<Layout title={title}>
   <!-- Banner Home -->
   <section
      class="section is-medium has-background-image banner"
      data-background="/img/banners/bg-especializaciones.webp"
      data-position="center 30%"
   >
      <div class="container">
         <div class="columns is-vcentered">
            <div class="column is-6 landing-caption">
               <h1 class="title is-1 is-bold is-spaced light-text">
                  Especialización de Wordpress
               </h1>
               <h2 class="subtitle is-5 light-text">
                  <br />
               </h2>
            </div>
         </div>
      </div>
   </section>

   <section class="section main">
      <div class="container">
         <div class="columns">
            <div class="column is-8">
               <div class="card">
                  <div class="card-content">
                     <h3 class="title is-4 mb-10 has-text-centered">
                        100% online o presencial: especialízate en Wordpress
                     </h3>

                     <div class="content">
                        <p>
                           Esta especialización provee a los estudiantes hacer
                           Páginas web en WordPress con carro de compras,
                           perfiles de usuarios, personalizar plantillas,
                           formularios entre otras herramientas.
                        </p>
                        <p>
                           La Especialización WordPress contiene 4 cursos para
                           profundizar en el desarrollo de páginas web en esta
                           plataforma, que contiene plantillas ya listas para
                           usar o se puede crear una desde 0.
                        </p>

                        <p>
                           Para estar en los niveles avanzados de WordPress debe
                           manejar bases de datos, PHP, Javascript, Jquery,
                           HTML5 y CSS3.
                        </p>

                        <p class="has-text-weight-semibold">
                           Certificado por el Ministerio de Educación. Código Nº
                           PR -07-017-11AC. Legaliza y apostilla tu certificado.
                        </p>
                     </div>

                     <div class="columns">
                        <div class="column">
                           <h4 class="subtitle">Duración:</h4>

                           <ul class="item-list">
                              <li>Lunes a viernes presencial 1 mes.</li>
                              <li>Sábados 2 meses.</li>
                              <li>Online 4 meses</li>
                           </ul>
                        </div>
                        <div class="column">
                           <h4 class="subtitle">Laboratorios</h4>

                           <ul class="item-list">
                              <li>Incluye 1 computador por persona.</li>
                              <li>De 4 a 8 alumnos por salón.</li>
                           </ul>
                        </div>
                     </div>

                     <hr />

                     <div class="columns">
                        <div class="column">
                           <h4 class="subtitle">Certificación:</h4>

                           <p>Registrado en el Ministerio de Educación</p>
                        </div>
                        <div class="column">
                           <h4 class="subtitle">Requisitos:</h4>

                           <p>Manejo básico de office e internet.</p>
                        </div>
                     </div>

                     <h3 class="title is-4">
                        Especialización Wordpress - 4 Cursos:
                     </h3>

                     <ul class="link-list">
                        <li>
                           <div class="icon">
                              <i
                                 class="iconify"
                                 data-icon="fa6-solid:circle-check"></i>
                           </div>
                           <span class="has-text-weight-medium is-size-5">
                              WordPress Nivel I
                           </span>
                        </li>

                        <li>
                           <div class="icon">
                              <i
                                 class="iconify"
                                 data-icon="fa6-solid:circle-check"></i>
                           </div>
                           <span class="has-text-weight-medium is-size-5">
                              WordPress Nivel II
                           </span>
                        </li>

                        <li>
                           <div class="icon">
                              <i
                                 class="iconify"
                                 data-icon="fa6-solid:circle-check"></i>
                           </div>
                           <span class="has-text-weight-medium is-size-5">
                              WordPress Nivel III
                           </span>
                        </li>

                        <li>
                           <div class="icon">
                              <i
                                 class="iconify"
                                 data-icon="fa6-solid:circle-check"></i>
                           </div>
                           <span class="has-text-weight-medium is-size-5">
                              WordPress Nivel IV
                           </span>
                        </li>
                     </ul>
                  </div>
               </div>
            </div>

            <AsideInterno urlPic="/img/pics/especializacion-wordpress.webp" />
         </div>
      </div>
   </section>

   <CursosRelated tag="especializacion" except="wordpress" />

   <ModalVideo videoID="lvoZB1IfgmU" />
</Layout>
